<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/widget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Day"
            android:textColor="@color/primary"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/widget_add_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:src="@android:drawable/ic_input_add" />
    </RelativeLayout>

    <!-- Task 1 -->
    <LinearLayout
        android:id="@+id/task_row_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/task_check_1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/checkbox_off_background" />

        <TextView
            android:id="@+id/task_title_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Task 1"
            android:textColor="@color/slate_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_dot_1"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/widget_dot_shape" />
    </LinearLayout>

    <!-- Task 2 -->
    <LinearLayout
        android:id="@+id/task_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/task_check_2"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/checkbox_off_background" />

        <TextView
            android:id="@+id/task_title_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Task 2"
            android:textColor="@color/slate_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_dot_2"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/widget_dot_shape" />
    </LinearLayout>

    <!-- Task 3 -->
    <LinearLayout
        android:id="@+id/task_row_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="4dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/task_check_3"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/checkbox_off_background" />

        <TextView
            android:id="@+id/task_title_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Task 3"
            android:textColor="@color/slate_900"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/task_dot_3"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/widget_dot_shape" />
    </LinearLayout>

    <TextView
        android:id="@+id/widget_empty_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="No tasks for today!"
        android:textColor="@color/slate_500"
        android:textSize="12sp"
        android:visibility="visible" />

</LinearLayout>
